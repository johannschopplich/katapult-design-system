{
  "name": "katapult-design-system",
  "type": "module",
  "version": "3.5.4",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "description": "The central hub for KATAPULT design tokens and a modern web design framework for KATAPULT projects",
  "author": "Johann Schopplich <schopplich@katapult-magazin.de> (https://www.katapult-magazin.de)",
  "license": "MIT",
  "homepage": "https://katapult-design-system.byjohann.dev",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/katapult-magazin/katapult-design-system.git"
  },
  "bugs": {
    "url": "https://gitlab.com/katapult-magazin/katapult-design-system/issues"
  },
  "keywords": [
    "katapult",
    "framework",
    "responsive",
    "design-system",
    "tokens",
    "css"
  ],
  "scripts": {
    "build:tokens": "node scripts/tokens/generator.js && cp dist/tokens/tokens.scss src/scss/abstracts/_tokens.scss",
    "build:sass": "sass --style=compressed src/scss/kds.scss dist/kds.css",
    "build:js": "esbuild --bundle --minify --outfile=dist/kds.js src/js/index.js && esbuild --minify --format=esm --outfile=dist/kds-head.js src/js/head.js",
    "dev": "npm run build:sass -- --watch && esbuild --bundle --watch --outfile=dist/kds.js src/js/index.js",
    "build": "npm run build:tokens && npm run build:sass -- --no-source-map && npm run build:js && node scripts/processBuildArtifacts.js",
    "publish": "node scripts/publish.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run lint && echo \"No test specified\"",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "chalk": "^5.6.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "fast-glob": "^3.3.3",
    "sass": "^1.97.3",
    "throttle-debounce": "^5.0.2"
  }
}
